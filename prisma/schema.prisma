generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Waitlist {
  id        String   @id @default(cuid())
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
}

model PartnerApplication {
  id           String   @id @default(cuid())
  companyName  String
  contactName  String
  email        String
  phone        String?   // kept optional in DB; API enforces required
  location     String?   // NEW: single field "Town, Country" (API enforces required)
  notes        String?
  createdAt    DateTime  @default(now())
}
