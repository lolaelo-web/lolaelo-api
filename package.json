{
    "name": "lolaelo-api",
    "version": "0.1.0",
    "type": "module",
    "engines": {
        "node": ">=20.10 <23"
    },
    "scripts": {
        "migrate:deploy": "prisma migrate deploy",
        "postinstall": "prisma generate",
        "prestart": "prisma generate",
        "dev": "tsx watch src/server.ts",
        "build": "prisma generate && tsc",
        "postbuild": "node scripts/copy-data.mjs",
        "start": "node dist/server.js",
        "start:prod": "prisma migrate deploy && node dist/server.js",
        "db:push": "prisma db push",
        "db:studio": "prisma studio",
        "test": "jest --runInBand",
        "dev:once": "npm run build && npm start"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.888.0",
        "@aws-sdk/s3-request-presigner": "^3.888.0",
        "@prisma/client": "^6.15.0",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "express-rate-limit": "7.4.0",
        "helmet": "7.1.0",
        "morgan": "1.10.0",
        "nodemailer": "^7.0.12",
        "pdfkit": "^0.17.2",
        "pg": "^8.16.3",
        "stripe": "^20.0.0",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.23",
        "@types/jest": "^30.0.0",
        "@types/morgan": "1.9.9",
        "@types/node": "^22.18.6",
        "@types/nodemailer": "^7.0.4",
        "@types/pg": "^8.15.5",
        "@types/supertest": "^6.0.3",
        "jest": "^30.1.3",
        "prisma": "^6.15.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.9.2"
    }
}
